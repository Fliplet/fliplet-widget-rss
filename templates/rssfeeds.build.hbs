<div id="date">{{getUpdateValue updatedTime}}</div>
<div class="offline-notification animated">{{ T 'widgets.rssFeed.offline' }}</div>
<div class="feed">

    <div class="loading-message-holder">
        <div class="loading-message">{{ T 'widgets.rssFeed.message' }}</div>
    </div>

    <ul class="feed-panels {{rssConf.designSettings.separationType}} {{rssConf.feedLayout}}">
        {{#each items}}
        <li id="{{@index}}" data-parent="{{../rssConf.feed.id}}" class="linked feed-item clearfix {{hasThumbnail this.thumbnail}} {{isRead this.read ../rssConf.highlighting}}">
            <span class="icon fa fa-angle-right"></span> {{#if this.thumbnail.length}}
            <div class="list-image" style="background-image: url('{{this.thumbnail}}');"></div>
            {{/if}}
            <div class="list-text-holder">
                <p class="list-title {{clipping ../rssConf.clippingSettings.title}}">
                    <span class="circle-icon"></span> {{safeString this.title}}
                </p>
                <p class="list-description {{clipping ../rssConf.clippingSettings.description}}">
                    {{safeString this.description}}
                </p>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
